---
const { product } = Astro.props;
---

<a href={"product/" + product.id}>
  <article class="product">
    <img src={product.image} alt={"billede af " + product.imagedescr} />
    <h2>{product.name}</h2>
    <p>{product.price} DKK</p>
  </article>
</a>

<style>
  .product img {
    max-width: 100%;
  }
  .product {
    position: relative;
    cursor: pointer;
  }

  .product h2 {
    display: none;
    position: absolute;
    left: 4%;
    right: 5%;
    bottom: 6%;
    color: #f2f0e8;
    font-family: "Anton";
    font-size: 180%;
    line-height: 32px;
  }
  .product p {
    display: none;
    position: absolute;
    left: 3%;
    bottom: 0%;
    color: white;
    font-size: 110%;
    font-family: "Inter";
  }

  .product:hover h2,
  .product:hover p {
    display: block;
  }

  .product img:hover {
    filter: brightness(80%);
  }

  @media (min-width: 825px) {
    .product h2 {
      left: 4%;
      right: 5%;
      bottom: 4%;
      font-size: 400%;
      line-height: 65px;
    }
    .product p {
      left: 4%;
      bottom: 0%;
      font-size: 200%;
    }
  }
</style>
